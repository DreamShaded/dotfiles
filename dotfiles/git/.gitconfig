	email = vzhyx@ya.ru
	name = Роман Юрьевич Троицкий

[alias]
	please = push --force-with-lease
	it = !git init && git commit -m 'feat: init repo' --allow-empty
	st = status
	rh = reset --hard
  co = checkout

	cm = commit -m
	cma = commit --all -m
	cmav = commit --all -m --no-verify

  cp = cherry-pick
  cpc = cherry-pick --continue

  rbi = rebase -i
  rbc = rebase --continue

[init]
	defaultBranch = master

[pull]
  # может мешать делать pull origin other_branch
	rebase = true

[core]
  autocrlf = input
	fileMode = false
	excludesfile = /home/r/.gitignore_global

[push]
  # осторожно с этим. Знай, куда пушишь.
	autoSetupRemote = true
	default = current

# Dracula theme
[url "https://github.com/dracula/"]
  insteadOf = dracula://
[color]
  ui = auto
[color "branch"]
  current = cyan bold reverse
  local = white
  plain =
  remote = cyan
[color "diff"]
  commit =
  func = cyan
  plain =
  whitespace = magenta reverse
  meta = white
  frag = cyan bold reverse
  old = red
  new = green
[color "grep"]
  context =
  filename =
  function =
  linenumber = white
  match =
  selected =
  separator =
[color "interactive"]
  error =
  header =
  help =
  prompt =
[color "status"]
  added = green
  changed = yellow
  header =
  localBranch =
  nobranch =
  remoteBranch = cyan bold
  unmerged = magenta bold reverse
  untracked = red
  updated = green bold